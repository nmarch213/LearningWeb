<div class="container">
	<div class="row">
		<h1 style="text-align: center">Add a new Comment to {{campground.name}}</h1>
		<div style="Width: 30%; margin:25px auto;">	
			<form  action="/campgrounds/{{campground.id}}/comments" method="POST" accept-charset="utf-8">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="comment[author]" placeholder="Author">
				</div>

				<div class="form-group">
					<button class="btn btn-lg btn-default btn-primary btn-block" type="submit">Add New Comments</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>	
	</div>
</div>