
<div class="container">
	

	<header id="header" class="jumbotron">
		<div class = "container">
			<h1>Welcome To YelpCamp</h1>
			<p>View our hand-pick campgrounds from all over the world</p>
			<p>
				<a class="btn btn-primary btn-large" href="/campgrounds/new">Add New CampGround</a>
			</p>
		</div>
	</header>

	<div class="row text-center" style ="display:flex; flex-wrap: wrap;">
		{{#each campgrounds}}
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="{{image}}">
					<div class ="caption">
						<h4>{{name}}</h4>
					</div>
					<p>
						<a href="/campgrounds/{{_id}}" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		{{/each}}
	</div>

</div>